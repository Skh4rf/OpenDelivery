<Page
    x:Class="OpenDelivery.CustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenDelivery"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel x:ConnectionId='2' Name="RouteSelect" Margin="50,50,0,0">
            <TextBlock Text="Wähle einen Kunden:" FontSize="36"/>
            <StackPanel Margin="0, 10, 0, 0" Orientation="Horizontal">
                <ComboBox x:ConnectionId='39' Name="ComboBoxCustomerSelect" Width="250"                                                           />
                <Button x:ConnectionId='40' Name="ButtonCreateCustomer" Content="+ Neuer Kunde erstellen" Margin="10, 0, 0, 0" VerticalAlignment="Top" Height="32"  FontSize="14" FontWeight="Normal" BorderBrush="ForestGreen" Background="LimeGreen"                                   />
            </StackPanel>

            <Grid>
                <Grid x:ConnectionId='4' Name="GridShowCustomer" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="600"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <StackPanel Margin="0, 20, 0, 0" Orientation="Horizontal">
                            <TextBlock Text="Name:" FontSize="36" VerticalAlignment="Stretch" FontWeight="Normal" TextDecorations="Underline"/>
                            <Button x:ConnectionId='38' Name="ButtonEditName" Content="Edit"  Margin="30,10,0,0"                             />
                        </StackPanel>
                        <TextBlock x:ConnectionId='28' Name="TextBlockVorname" Text="" FontSize="22" FontStyle="Italic" Margin="0,10,0,0"/>

                        <StackPanel Margin="0, 20, 0, 0" Orientation="Horizontal">
                            <TextBlock Text="Adresse:" FontSize="36" VerticalAlignment="Stretch" FontWeight="Normal" TextDecorations="Underline"/>
                            <Button x:ConnectionId='37' Name="ButtonEditAdresse" Content="Edit"  Margin="30,10,0,0"/>
                        </StackPanel>
                        <TextBlock x:ConnectionId='29' Name="TextBlockStreet" Text="" FontSize="22" FontStyle="Italic" Margin="0,10,0,0"/>
                        <TextBlock x:ConnectionId='30' Name="TextBlockCity" Text="" FontSize="22" FontStyle="Italic"/>

                        <TextBlock Text="Routen:" FontSize="36" VerticalAlignment="Stretch" FontWeight="Normal" TextDecorations="Underline" Margin="0, 20, 0, 0"/>
                        <StackPanel Margin="0, 10, 0, 0" Orientation="Horizontal">
                            <ComboBox x:ConnectionId='34' Name="ComboBoxSelectRoute" Width="200" Margin="0, 0, 0, 0"                                                        />
                            <Button x:ConnectionId='35' Name="ButtonAddRoute" Content="Hinzufügen" Margin="20, 0, 0, 0"/>
                            <Button x:ConnectionId='36' Name="ButtonDeleteRoute" Content="Entfernen"  Margin="10,0,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                            <TextBlock x:ConnectionId='32' Name="TextBlockRoute" Text="Produkte:" FontSize="22" FontStyle="Italic" Margin="0,0,0,0"/>
                            <Button x:ConnectionId='33' Name="ButtonEditProdukte" Content="Edit" Margin="30, 0, 0, 0"/>
                        </StackPanel>
                        <TextBlock x:ConnectionId='31' Name="TextBlockProdukte" Text="" FontSize="22" FontStyle="Italic"/>
                    </StackPanel>

                    <Grid x:ConnectionId='23' Name="GridEditName" Grid.Column="1" Visibility="Collapsed">
                        <StackPanel Margin="0, 20, 0 ,0">
                            <TextBlock Text="Edit:" FontSize="22" FontStyle="Italic"/>
                            <TextBox x:ConnectionId='24' Name="TextBoxChange1" Width="200" Text="" HorizontalAlignment="Left" Margin="0, 10, 0, 0"/>
                            <TextBox x:ConnectionId='25' Name="TextBoxChange2" Width="200" Text="" HorizontalAlignment="Left" Margin="0, 10, 0, 0"/>
                            <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                                <Button x:ConnectionId='26' Name="ButtonSave" Content="Speichern"                         />
                                <Button x:ConnectionId='27' Name="ButtonBack" Content="Abbrechen" Margin="30, 0, 0, 0"                         />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>

                <ScrollViewer Margin="0, 50, 0, 0" Width="1400" Height="790" HorizontalScrollMode="Enabled" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Grid x:ConnectionId='5' Name="GridCreateNewCustomer" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Erstellen einen neuen Kunden:" FontSize="48"/>

                            <StackPanel Orientation="Horizontal">
                                <StackPanel>
                                    <TextBlock Text="Vorname:" FontSize="24" Margin="0,20,0,0"/>
                                    <TextBox x:ConnectionId='21' Name="TextBoxCreateCustomerFirstName" Width="200" HorizontalAlignment="Left"                                                         />
                                    <TextBlock Text="Nachname:" FontSize="24"/>
                                    <TextBox x:ConnectionId='22' Name="TextBoxCreateCustomerLastName" Width="200" HorizontalAlignment="Left"                                                        />
                                </StackPanel>

                                <StackPanel Margin="50,0,0,0">
                                    <TextBlock Text="Straße:" FontSize="24" Margin="0,20,0,0"/>
                                    <TextBox x:ConnectionId='16' Name="TextBoxCreateCustomerStreet" Width="200" HorizontalAlignment="Left"                                                      />
                                    <TextBlock Text="Nummer:" FontSize="24"/>
                                    <TextBox x:ConnectionId='17' Name="TextBoxCreateCustomerNumber" Width="200" HorizontalAlignment="Left"                                                      />
                                    <TextBlock Text="Adresszusatz:" FontSize="24"/>
                                    <TextBox x:ConnectionId='18' Name="TextBoxCreateCustomerNumber2" Width="200" HorizontalAlignment="Left"                                                       />
                                    <TextBlock Text="Postleitzahl:" FontSize="24"/>
                                    <TextBox x:ConnectionId='19' Name="TextBoxCreateCustomerPostalcode" Width="200" HorizontalAlignment="Left"                                                          />
                                    <TextBlock Text="Ort:" FontSize="24"/>
                                    <TextBox x:ConnectionId='20' Name="TextBoxCreateCustomerCity" Width="200" HorizontalAlignment="Left"                                                    />
                                </StackPanel>

                                <StackPanel Margin="50,0,0,0">
                                    <TextBlock Text="Zu Routen hinzufügen:" FontSize="24" Margin="0,20,0,0"/>
                                    <StackPanel Orientation="Horizontal">
                                        <ComboBox x:ConnectionId='15' Name="ComboBoxCreateCustomerRoute" Width="200"                                                                />
                                    </StackPanel>
                                    
                                    <TextBlock Text="Ausgewählte Routen:" FontSize="24"/>
                                    <TextBlock x:ConnectionId='13' Name="TextBlockCreateCustomerSelectedRoute" Text="" FontSize="18"/>
                                    <Button x:ConnectionId='14' Name="TextBlockCreateCustomerSave" Content="Save" FontSize="48" Width="200" Background="Orange" BorderBrush="DarkOrange" HorizontalAlignment="Center" Margin="0,50,0,0"                                          />

                                </StackPanel>

                                <StackPanel x:ConnectionId='6' Name="StackPanelCreateCustomerAddProducts" Margin="50,0,0,0" Visibility="Collapsed">
                                    <TextBlock Text="Produkte wählen:" FontSize="24" Margin="0,20,0,0"/>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBox x:ConnectionId='9' Name="TextBoxCreateCustomerProductQuantity" Width="70"                                                               />
                                        <TextBlock x:ConnectionId='10' Name="TextBlockCreateCustomerProductUnit" Text="Stück" FontSize="24" Margin="5,0,0,0"/>
                                        <ComboBox x:ConnectionId='11' Name="ComboBoxCreateCustomerProducts" Width="200" Margin="15,0,0,0"                                                                   />
                                        <Button x:ConnectionId='12' Name="ButtonCreateCustomerAddProduct" Content="Add" Background="LimeGreen" BorderBrush="ForestGreen" Margin="15,0,0,0" IsEnabled="False"                                             />
                                    </StackPanel>

                                    <TextBlock Text="Ausgewählte Produkte:" FontSize="24"/>
                                    <TextBlock x:ConnectionId='7' Name="TextBlockCreateCustomerShowSelectedProducts" Text="" FontSize="18"/>
                                    <Button x:ConnectionId='8' Name="ButtonCreateCustomerAddRoute" Content="Add Route" Background="LimeGreen" BorderBrush="ForestGreen"                                           />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

            </Grid>
        </StackPanel> 
    <Button x:ConnectionId='3' Name="ButtonLoadDatabase" Content="Reload from Database" Margin="0,50,50,0" VerticalAlignment="Top" HorizontalAlignment="Right"                     />

    </Grid>
</Page>

