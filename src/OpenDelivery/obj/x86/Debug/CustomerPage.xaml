<Page
    x:Class="OpenDelivery.CustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenDelivery"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel x:ConnectionId='2' Name="RouteSelect" Margin="50,50,0,0">
            <TextBlock Text="Wähle einen Kunden:" FontSize="36"/>
            <StackPanel Margin="0, 10, 0, 0" Orientation="Horizontal">
                <ComboBox x:ConnectionId='21' Name="ComboBoxCustomerSelect" Width="250"                                                           />
                <Button x:ConnectionId='22' Name="ButtonCreateCustomer" Content="+ Neuer Kunde erstellen" Margin="10, 0, 0, 0" VerticalAlignment="Top" Height="32"  FontSize="14" FontWeight="Normal" BorderBrush="ForestGreen" Background="LimeGreen"                                   />
            </StackPanel>

            <Grid x:ConnectionId='4' Name="GridShowCustomer" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                <StackPanel Margin="0, 20, 0, 0" Orientation="Horizontal">
                    <TextBlock Text="Name:" FontSize="36" VerticalAlignment="Stretch" FontWeight="Normal" TextDecorations="Underline"/>
                    <Button x:ConnectionId='20' Name="ButtonEditName" Content="Edit"  Margin="30,10,0,0"                             />
                </StackPanel>
                <TextBlock x:ConnectionId='10' Name="TextBlockVorname" Text="" FontSize="22" FontStyle="Italic" Margin="0,10,0,0"/>
            
                <StackPanel Margin="0, 20, 0, 0" Orientation="Horizontal">
                    <TextBlock Text="Adresse:" FontSize="36" VerticalAlignment="Stretch" FontWeight="Normal" TextDecorations="Underline"/>
                    <Button x:ConnectionId='19' Name="ButtonEditAdresse" Content="Edit"  Margin="30,10,0,0"/>
                </StackPanel>
                <TextBlock x:ConnectionId='11' Name="TextBlockStreet" Text="" FontSize="22" FontStyle="Italic" Margin="0,10,0,0"/>
                <TextBlock x:ConnectionId='12' Name="TextBlockCity" Text="" FontSize="22" FontStyle="Italic"/>

                <TextBlock Text="Routen:" FontSize="36" VerticalAlignment="Stretch" FontWeight="Normal" TextDecorations="Underline" Margin="0, 20, 0, 0"/>
                <StackPanel Margin="0, 10, 0, 0" Orientation="Horizontal">
                    <ComboBox x:ConnectionId='16' Name="ComboBoxSelectRoute" Width="200" Margin="0, 0, 0, 0" SelectedIndex="0"                                                        />
                    <Button x:ConnectionId='17' Name="ButtonAddRoute" Content="Hinzufügen" Margin="20, 0, 0, 0"/>
                    <Button x:ConnectionId='18' Name="ButtonDeleteRoute" Content="Entfernen"  Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                    <TextBlock x:ConnectionId='14' Name="TextBlockRoute" Text="Produkte:" FontSize="22" FontStyle="Italic" Margin="0,0,0,0"/>
                    <Button x:ConnectionId='15' Name="ButtonEditProdukte" Content="Edit" Margin="30, 0, 0, 0"/>
                </StackPanel>
                <TextBlock x:ConnectionId='13' Name="TextBlockProdukte" Text="" FontSize="22" FontStyle="Italic"/>
                </StackPanel>

                <Grid x:ConnectionId='5' Name="GridEditName" Grid.Column="1" Visibility="Collapsed">
                    <StackPanel Margin="0, 20, 0 ,0">
                        <TextBlock Text="Edit:" FontSize="22" FontStyle="Italic"/>
                        <TextBox x:ConnectionId='6' Name="TextBoxChangeFirstName" Width="200" Text="" HorizontalAlignment="Left" Margin="0, 10, 0, 0"/>
                        <TextBox x:ConnectionId='7' Name="TextBoxChangeLastName" Width="200" Text="" HorizontalAlignment="Left" Margin="0, 10, 0, 0"/>
                        <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                            <Button x:ConnectionId='8' Name="ButtonSave" Content="Speichern"                         />
                            <Button x:ConnectionId='9' Name="ButtonBack" Content="Abbrechen" Margin="30, 0, 0, 0"                         />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </StackPanel> 
    <Button x:ConnectionId='3' Name="ButtonLoadDatabase" Content="Reload from Database" Margin="0,50,50,0" VerticalAlignment="Top" HorizontalAlignment="Right"                     />

    </Grid>
</Page>

